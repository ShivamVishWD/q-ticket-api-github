<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <link href="/scss/global.css" rel="stylesheet" type="text/css">
    <title>Login</title>
</head>
<body>
    <div class="container-fluid admin_dashboard">
        <div class="nav_side">
            <div class="nav_header_logo">
                <img src="/imgs/quadrafort_logo.png" alt="quadrafort">
            </div>
            <div class="dashboard_nav_links">
              <% if(profile == 'Admin' || profile == 'admin') { %>
                <a href="#"><i class="fa fa-home"></i>&nbsp;Home</a>
                <a href="/dashboard"><img src="/imgs/home.png" alt="home">Dashboard</a>
                <a href="/projects"><img src="/imgs/project-management.png" alt="project">Project</a>
                <a href="/customers"  class="active_class"><img src="/imgs/costumer.png" alt="consumers">Customers</a>
                <a href="/employees"><img src="/imgs/work-from-home.png" alt="teams">Team</a>
              <% } %>
              <% if(profile == 'Admin' || profile == 'admin' || profile == 'Employee' || profile == 'employee') { %>
                <a href="/tickets"><img src="/imgs/ticket.png" alt="consumers">Ticket</a>
              <% } %>
              <% if(profile == 'Admin' || profile == 'admin') { %>
                <a href="/admin/logout"><img src="/imgs/power.png" alt="logout">Log out</a>
              <% } else{ %>
                <a href="/employee/logout">Log Out</a>
              <% } %>
            </div>
        </div>
        <div class="dashboard_view container-fluid">
            <div class="dashborad_header">
                <b>Customers</b>
                <div class="notification_bar">
                    <div class="user_profile">
                        <img src="/imgs/user.png" alt="user">
                    <p><%= username %></p>
                    </div>
                    <img src="/imgs/bell.png" class="bell_icon" alt="notification">
                </div>
            </div>
            <div class="add_btn_container">
                <button data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add customer</button>
            </div>
            <div class="table_view container-fluid" id="costumer_table">
           

            </div>
        </div>
    </div>

  
  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Add customer</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="customer" class="modal_to_add">
            <div class="row mb-3">
                <div class="col-6">
                    <div class="form-floating">
                        <input type="email" name="name" class="form-control" id="floatingInput" placeholder="Enter name">
                        <label for="floatingInput">Name</label>
                      </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Project name</label>
                        <select name="project" class="form-control" id="project-option">
                        </select>
                      </div>
                </div>
            </div>
            
            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
              </div>
              
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="handleForm('customer');">Add</button>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    const Base_url = "<%= url %>";
    const token = "<%= usertoken %>";
    const userid = "<%= userid %>";
    const profile = "<%= profile %>";
  </script>
  <script src="/js/validation.js"></script>
  <script src="/js/customerController.js"></script>
</body>
</html>